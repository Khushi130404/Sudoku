<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    android:background="@drawable/border"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3"
        >

        <TextView
            android:id="@+id/cell1.1"
            android:background="@drawable/cell"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            ></TextView>
        <TextView
            android:id="@+id/cell1.2"
            android:background="@drawable/cell"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            ></TextView>
        <TextView
            android:id="@+id/cell1.3"
            android:background="@drawable/cell"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            ></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3"
        >

        <TextView
            android:id="@+id/cell2.1"
            android:background="@drawable/cell"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            ></TextView>
        <TextView
            android:id="@+id/cell2.2"
            android:background="@drawable/cell"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            ></TextView>
        <TextView
            android:id="@+id/cell2.3"
            android:background="@drawable/cell"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            ></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3"
        >

        <TextView
            android:id="@+id/cell3.1"
            android:background="@drawable/cell"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            ></TextView>
        <TextView
            android:id="@+id/cell3.2"
            android:background="@drawable/cell"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            ></TextView>
        <TextView
            android:id="@+id/cell3.3"
            android:background="@drawable/cell"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            ></TextView>

    </LinearLayout>

</LinearLayout>