<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="70dp"
        android:paddingBottom="70dp"
        android:layout_weight="4"
        >
        <include layout="@layout/board_layout" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="9"
        android:paddingTop="20dp"
        android:paddingBottom="60dp"
        android:layout_weight="1"
        >
    <Button
        android:id="@+id/bt1"
        android:text="1"
        android:background="@drawable/number_button"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
    </Button>

        <Button
            android:id="@+id/bt2"
            android:text="2"
            android:background="@drawable/number_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            ></Button>

        <Button
            android:id="@+id/bt3"
            android:text="3"
            android:background="@drawable/number_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            ></Button>

        <Button
            android:id="@+id/bt4"
            android:text="4"
            android:background="@drawable/number_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            ></Button>

        <Button
            android:id="@+id/bt5"
            android:text="5"
            android:background="@drawable/number_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            ></Button>

        <Button
            android:id="@+id/bt6"
            android:text="6"
            android:background="@drawable/number_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            ></Button>

        <Button
            android:id="@+id/bt7"
            android:text="7"
            android:background="@drawable/number_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            ></Button>

        <Button
            android:id="@+id/bt8"
            android:text="8"
            android:background="@drawable/number_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            ></Button>

        <Button
            android:id="@+id/bt9"
            android:text="9"
            android:background="@drawable/number_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            ></Button>

    </LinearLayout>

</LinearLayout>